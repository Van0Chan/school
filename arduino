const int ledPin = 10;
String sprava;
int IntSprava;

void setup() {
  pinMode(ledPin, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  if (Serial.available() > 0) { 
    sprava = Serial.readString();
    sprava.trim();

    Serial.print("Sprava ako string = ");
    Serial.println(sprava);

    if (sprava == "on") IntSprava = 1;
    else if (sprava == "off") IntSprava = 0;
    else IntSprava = sprava.toInt();

    Serial.print("Sprava ako int = ");
    Serial.println(IntSprava);

    digitalWrite(ledPin, IntSprava);
  }
}
