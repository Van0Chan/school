#include <Adafruit_LiquidCrystal.h>

// Inicializ√°cia LCD
Adafruit_LiquidCrystal lcd(0);

void setup() {
    lcd.begin(16, 2); 
    lcd.print("Voltmeter"); 
    lcd.setCursor(0, 1); 
    lcd.print("A0=");
}

void loop() {
    int adIn = analogRead(A0); 
    float voltage = (adIn / 1023.0) * 5.0; 
    
    lcd.setCursor(3, 1); 
    lcd.print(voltage, 2);
    lcd.print("V "); 
    
    delay(500); //
}
